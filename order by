1.order by student table in desc:


CREATE TABLE student (
    student_name VARCHAR(100),
    student_mark INT,
    department VARCHAR(100)
);

INSERT INTO student VALUES ('PRAVEEN', 1, 'CSE');
INSERT INTO student VALUES ('MANOJ', 2, 'MECH');
INSERT INTO student VALUES ('KARTHI', 3, 'ECE');
INSERT INTO student VALUES ('RAJU', 4, 'MECH');

SELECT student_name, student_mark 
FROM student 
ORDER BY student_mark DESC;

SELECT * FROM student;


2.orderby student table in asc:

CREATE TABLE student (
    student_name VARCHAR(100),
    student_mark INT,
    department VARCHAR(100)
);

INSERT INTO student VALUES ('PRAVEEN', 1, 'CSE');
INSERT INTO student VALUES ('MANOJ', 2, 'MECH');
INSERT INTO student VALUES ('KARTHI', 3, 'ECE');
INSERT INTO student VALUES ('RAJU', 4, 'MECH');

SELECT student_name, student_mark 
FROM student 
ORDER BY student_mark ASC;

SELECT * FROM student;

